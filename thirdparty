## tuning for third party services

tune_thirdparty() {
    local base factor mhf threads provider
    provider=${X_ID/-*}
    if type "$provider"; then
        $provider
    else
        return
    fi

    cMhf=${mhf:-$cMhf}
    cThr=${threads:-$cThr}
    ## use change config to override MHF_FIXED
    change_config hash-factor "$cMhf"
    change_config threads "$cThr"
    [ -n "$csleep" ] && change_config cpu-sleep $csleep
}

travis() {
    case "$job_algo" in
        "cn-heavy")
            mhf=1
            threads=1
            ;;
        "cn")
            mhf=2
            threads=1
            ;;
        "cn-lite")
            mhf=2
            threads=2
            ;;
        "cn-pico")
            mhf=4
            threads=2
            ;;
    esac
}

