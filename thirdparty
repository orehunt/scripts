appv() {
    {
        case "$job_algo" in
            "cn-heavy")
                mhf=3
                threads=1
                csleep=75000
                ;;
            "cn")
                mhf=3
                threads=2
                csleep=50000
                ;;
            "cn-lite")
                mhf=4
                threads=2
                csleep=30000
                ;;
            "cn-pico")
                mhf=5
                threads=2
                csleep=20000
                ;;
        esac
    }
}
