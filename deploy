# fleep 1 ## once more for edge cases



## debug
if [ -n "$DEBUG" ]; then
    env > dump.env
    trap - SIGINT EXIT SIGKILL SIGTERM
    fleep $DEBUG
    kill -9 $BASHPID
fi

fleep 1
start
